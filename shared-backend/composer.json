{
    "name": "php-fullstack-challenges/shared-backend",
    "description": "Shared backend components for PHP fullstack challenges",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "PHP Fullstack Challenges",
            "email": "challenges@example.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ext-json": "*",
        "ext-pdo": "*",
        "ext-openssl": "*",
        "ext-curl": "*",
        "ext-gd": "*",
        "ext-mbstring": "*",
        "ext-fileinfo": "*",
        "ext-zip": "*",
        "ext-memcached": "*",
        "ext-redis": "*",
        "monolog/monolog": "^3.0",
        "psr/log": "^3.0",
        "psr/http-message": "^2.0",
        "psr/container": "^2.0",
        "symfony/dependency-injection": "^6.3",
        "symfony/config": "^6.3",
        "symfony/yaml": "^6.3",
        "symfony/console": "^6.3",
        "symfony/event-dispatcher": "^6.3",
        "doctrine/dbal": "^3.6",
        "doctrine/migrations": "^3.6",
        "ramsey/uuid": "^4.7",
        "firebase/php-jwt": "^6.8",
        "predis/predis": "^2.2",
        "league/container": "^4.2",
        "league/route": "^5.1",
        "league/plates": "^3.5",
        "vlucas/phpdotenv": "^5.5",
        "respect/validation": "^2.2",
        "phpmailer/phpmailer": "^6.8",
        "aws/aws-sdk-php": "^3.271",
        "google/cloud-storage": "^1.28",
        "intervention/image": "^2.7",
        "league/flysystem": "^3.15",
        "league/flysystem-aws-s3-v3": "^3.15",
        "league/flysystem-google-cloud-storage": "^3.15",
        "spiral/roadrunner": "^2.12",
        "spiral/grpc": "^2.11",
        "spiral/goridge": "^3.4",
        "guzzlehttp/guzzle": "^7.7",
        "webonyx/graphql-php": "^15.0",
        "pusher/pusher-php-server": "^7.2",
        "ratchet/pawl": "^0.4",
        "reactphp/http": "^1.8",
        "reactphp/socket": "^1.12",
        "phpunit/phpunit": "^10.2",
        "mockery/mockery": "^1.5",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.2",
        "mockery/mockery": "^1.5",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "SharedBackend\\": "src/",
            "SharedBackend\\Tests\\": "tests/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SharedBackend\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "phpstan": "phpstan analyse src tests --level=max",
        "cs-check": "phpcs src tests",
        "cs-fix": "phpcbf src tests",
        "quality": [
            "@cs-check",
            "@phpstan",
            "@test"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}

{
    "name": "challenge-12/rest-jwt-api",
    "description": "Challenge 12: REST API with JWT Authentication",
    "type": "project",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.1",
        "ext-json": "*",
        "monolog/monolog": "^3.0",
        "symfony/dotenv": "^6.0",
        "php-di/php-di": "^7.0",
        "firebase/php-jwt": "^6.0",
        "ext-pdo": "*",
        "../shared-backend": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse src tests",
        "cs": "phpcs --standard=PSR12 src tests",
        "cs-fix": "phpcbf --standard=PSR12 src tests"
    }
}
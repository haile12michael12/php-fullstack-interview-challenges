{
    "name": "challenge-15/advanced-error-handling",
    "description": "Challenge 15: Advanced Error Handling",
    "type": "project",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.1",
        "ext-json": "*",
        "monolog/monolog": "^3.0",
        "symfony/dotenv": "^6.0",
        "php-di/php-di": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse app tests",
        "cs": "phpcs --standard=PSR12 app tests",
        "cs-fix": "phpcbf --standard=PSR12 app tests"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}